{% extends 'base.html.twig' %}

{% block title %}
	Hello DefaultController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Bonjour
			{{ controller_name }}! ✅</h1>

		Ce message amical vient de :

		<ul>
			<li>Votre contrôleur à
				<code>
					<a href="{{ '/Applications/XAMPP/xamppfiles/htdocs/symfony4-5/apollo/src/Controller/DefaultController.php'|file_link(0) }}">src/Controller/DefaultController.php</a>
				</code>
			</li>
			<li>Votre template à
				<code>
					<a href="{{ '/Applications/XAMPP/xamppfiles/htdocs/symfony4-5/apollo/templates/default/index.html.twig'|file_link(0) }}">templates/default/index.html.twig</a>
				</code>
			</li>
		</ul>
		{{render(controller(
			'App\\Controller\\DefaultController::mostPopularPosts',
			{ 'number': 5 }
		))}}
		{{app.user}}
		{{app.request.get('param')}}
		{{app.environment}}
		<ul>
			{% for user in users %}
				<li>{{user.name}}
					- Vous avez gagné
					{{random_gift[loop.index0]}}</li>
			{% endfor %}
		</ul>
		{% for message in app.flashes('notice') %}
			<div class="flash-notice">
				{{ message }}
			</div>
		{% endfor %}
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="flash-{{ label }}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}
	</div>
{% endblock %}
